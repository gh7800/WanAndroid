<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.shineiot.compontentpro">

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@drawable/icon_logo_wan"
        android:roundIcon="@drawable/icon_logo_wan"
        android:label="@string/app_name"
        android:maxAspectRatio="2.4"
        android:resizeableActivity="true"
        android:supportsRtl="true"

        android:theme="@style/AppTheme"
        tools:replace="android:allowBackup"
        tools:targetApi="o">

        <!--AndroidAutoSize  设计屏幕基准值dp-->
        <meta-data
            android:name="design_width_in_dp"
            android:value="411" />
        <meta-data
            android:name="design_height_in_dp"
            android:value="731" />

        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.home.MainActivity"
            android:launchMode="singleTask"
            android:windowSoftInputMode="stateVisible|adjustPan" />

        <activity
            android:name=".ui.integral.IntegralActivity"
            android:launchMode="singleTop" />

        <activity
            android:name=".ui.ask.AskDayActivity"
            android:launchMode="singleTop" />
    </application>

</manifest>