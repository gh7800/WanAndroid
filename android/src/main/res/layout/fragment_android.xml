<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin_bg_light"
    android:tag="skin:skin_bg:background"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/textView"
            android:text="androidFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/skin_textColor_light"
            android:tag="skin:skin_textColor:textColor"
            android:background="@color/blue_dark_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
</android.support.constraint.ConstraintLayout>